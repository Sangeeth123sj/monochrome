<div class = 'container'>
  <h1>Log in</h1>
  <div class='row'>
    <div class='col-9 center'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-3">
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'name@example.com' %>
        </div>

        <div class="field mb-3">
          <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: 'Password' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mb-3">
          <%= f.submit "Log in", class: 'btn btn-outline-dark' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>  
</div>